<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal para el modo oscuro -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Fondo de la ventana -->
        <item name="android:windowBackground">#263238</item> <!-- Verde oscuro para modo nocturno -->

        <!-- Color principal y de acento -->
        <item name="colorPrimary">#455A64</item> <!-- Verde oscuro mÃ¡s intenso -->
        <item name="colorPrimaryVariant">#37474F</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Color secundario -->
        <item name="colorSecondary">#CFD8DC</item> <!-- Gris claro para contraste -->
        <item name="colorSecondaryVariant">#B0BEC5</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Color de texto -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Estilo de botones -->
        <item name="buttonStyle">@style/CustomButtonStyleNight</item>
    </style>

    <!-- Estilo personalizado para botones -->
    <style name="CustomButtonStyleNight" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#B0BEC5</item> <!-- Gris claro -->
        <item name="android:textColor">#000000</item>
        <item name="cornerRadius">16dp</item>
    </style>
</resources>
