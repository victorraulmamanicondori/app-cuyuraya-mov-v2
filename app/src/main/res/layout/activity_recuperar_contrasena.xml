<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLightColor"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center"
    tools:context=".RecuperarContrasenaActivity">

    <TextView
        android:id="@+id/lblDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="30dp"
        android:text="@string/dni"
        android:textColor="@color/primaryDarkColor"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etDni"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="30dp"
        android:background="@color/editTextBackgroundColor"
        android:hint="@string/ingrese_dni"
        android:inputType="number"
        android:autofillHints="username"
        android:paddingHorizontal="10dp"
        android:textColor="@color/editTextTextColor"/>

    <TextView
        android:id="@+id/tvErrorDni"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="30dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnResetearContrasena"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_resetear_contrasena"
        android:backgroundTint="@color/buttonBackgroundColor"
        android:textColor="@color/buttonTextColor"
        android:textSize="14sp"
        android:textStyle="bold"/>

</LinearLayout>